<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="600.0" prefHeight="180.0" prefWidth="243.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.thinklance.pidev.GUI.PopoverController">
   <content>
      <VBox>
         <children>
            <VBox fx:id="options" style="-fx-background-color: #FFF;" styleClass="options" VBox.vgrow="ALWAYS">
               <children>
                  <JFXButton fx:id="myprofile" alignment="BASELINE_LEFT" graphicTextGap="20.0" onAction="#viewMyProfile" prefHeight="40.0" prefWidth="241.0" text="Mon profil">
                     <padding>
                        <Insets left="28.0" />
                     </padding>
                     <graphic>
                        <ImageView fitHeight="25.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../ressourses/man-user.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="create_profile" alignment="BASELINE_LEFT" graphicTextGap="20.0" onAction="#createProfile" prefHeight="36.0" prefWidth="241.0" text="Créer mon profil">
                     <padding>
                        <Insets left="28.0" />
                     </padding>
                     <graphic>
                        <ImageView fitHeight="29.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../ressourses/new-user.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="parametres" alignment="BASELINE_LEFT" graphicTextGap="20.0" onAction="#parametersCompte" prefHeight="36.0" prefWidth="241.0" text="Paramètres compte">
                     <padding>
                        <Insets left="28.0" />
                     </padding>
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../ressourses/settings-gears.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="logout" alignment="BASELINE_LEFT" graphicTextGap="20.0" onAction="#logout" prefHeight="36.0" prefWidth="241.0" text="Déconnexion">
                     <padding>
                        <Insets left="28.0" />
                     </padding>
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../ressourses/out.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </JFXButton>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
